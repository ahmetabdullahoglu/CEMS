# ==================== APPLICATION SETTINGS ====================
PROJECT_NAME=CEMS - Currency Exchange Management System
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
API_V1_STR=/api/v1

# ==================== SECURITY SETTINGS ====================
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
ALGORITHM=HS256

# ==================== DATABASE CONFIGURATION ====================
POSTGRES_SERVER=localhost
POSTGRES_USER=cems_user
POSTGRES_PASSWORD=cems_password
POSTGRES_DB=cems_db
POSTGRES_PORT=5432
# Alternative: Full database URL (overrides individual settings above)
# DATABASE_URL=postgresql://cems_user:cems_password@localhost:5432/cems_db

# ==================== TEST DATABASE (Optional) ====================
TEST_DATABASE_URL=postgresql://cems_user:cems_password@localhost:5432/cems_test_db

# ==================== REDIS CONFIGURATION ====================
REDIS_URL=redis://localhost:6379/0
REDIS_EXPIRE_SECONDS=3600

# ==================== CORS SETTINGS ====================
# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# ==================== TRUSTED HOSTS (Production) ====================
# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,yourdomain.com

# ==================== EMAIL CONFIGURATION ====================
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=CEMS System

# ==================== LOGGING CONFIGURATION ====================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/cems.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ==================== FILE UPLOAD SETTINGS ====================
MAX_FILE_SIZE=10485760
UPLOAD_DIRECTORY=uploads
# Comma-separated list of allowed extensions
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.xlsx,.csv

# ==================== BUSINESS CONFIGURATION ====================
DEFAULT_CURRENCY=USD
EXCHANGE_RATE_PRECISION=4
AMOUNT_PRECISION=2

# ==================== RATE LIMITING ====================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ==================== EXTERNAL APIS ====================
# Exchange Rate API Configuration
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/

# ==================== MONITORING & HEALTH ====================
HEALTH_CHECK_TIMEOUT=30
METRICS_ENABLED=true

# ==================== BACKUP CONFIGURATION ====================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ==================== TESTING ====================
TESTING=false

# ==================== CELERY (Background Tasks) ====================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ==================== AWS CONFIGURATION (Optional) ====================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=cems-files

# ==================== PAYMENT GATEWAYS (Optional) ====================
# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_ENVIRONMENT=sandbox

# ==================== SMS CONFIGURATION (Optional) ====================
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ==================== PUSH NOTIFICATIONS (Optional) ====================
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# ==================== SOCIAL LOGIN (Optional) ====================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ==================== DEVELOPMENT SETTINGS ====================
# Set to true for development features
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false

# ==================== PERFORMANCE SETTINGS ====================
MAX_WORKERS=4
KEEP_ALIVE=2
TIMEOUT=30

# ==================== LOCALE & TIMEZONE ====================
DEFAULT_TIMEZONE=UTC
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ar

# ==================== FEATURE FLAGS ====================
ENABLE_WEBSOCKETS=true
ENABLE_BACKGROUND_TASKS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true

# ==================== DOCKER COMPOSE OVERRIDES ====================
# These are used by docker-compose.yml
POSTGRES_HOST=postgres
REDIS_HOST=redis

# ==================== PRODUCTION OVERRIDES ====================
# Uncomment and modify for production deployment
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# POSTGRES_SERVER=your-production-db-host
# REDIS_URL=redis://your-production-redis-host:6379/0
# BACKEND_CORS_ORIGINS=https://yourdomain.com
# ALLOWED_HOSTS=yourdomain.com

# ==================== SECURITY HEADERS (Production) ====================
SECURE_SSL_REDIRECT=false
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_FRAME_DENY=true
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_BROWSER_XSS_FILTER=true

# ==================== DATABASE CONNECTION POOL ====================
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ==================== CUSTOM BUSINESS RULES ====================
# Commission rates (percentage)
STANDARD_COMMISSION_RATE=0.25
VIP_COMMISSION_RATE=0.15
PREMIUM_COMMISSION_RATE=0.10
MINIMUM_COMMISSION_AMOUNT=1.00

# Transaction limits
DAILY_TRANSACTION_LIMIT_USD=50000
SINGLE_TRANSACTION_LIMIT_USD=10000

# Exchange rate margins (percentage)
BUY_RATE_MARGIN=0.02
SELL_RATE_MARGIN=0.02

# Working hours
BRANCH_OPEN_TIME=08:00
BRANCH_CLOSE_TIME=18:00
BRANCH_TIMEZONE=UTC+3